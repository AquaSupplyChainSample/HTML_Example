pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image darinpope/java-web-app:latest --output cve_report.html'
      }
    }
  post {
  always {
          archiveArtifacts artifacts: "cve_report", fingerprint: true
          publishHTML (target: [
            allowMissing: false,
            alwaysLinkToLastBuild: false,
            keepAll: true,
            reportDir: '.',
            reportFiles: 'cve_report.html',
            reportName: 'Trivy CVE Report'
            ])
          }
      }
    }
}
