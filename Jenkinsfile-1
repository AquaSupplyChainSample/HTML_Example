pipeline {
  agent { label 'linux' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Trivy Scan') {
      steps {
        sh 'trivy image darinpope/java-web-app:latest --output cve_report.html'
      }
    }
   }
}
